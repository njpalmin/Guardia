<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.anjolabs.guardian"
      android:versionCode="1"
      android:versionName="1.0">


    <application android:name="GuardianApp" 
    	android:icon="@drawable/anjo" 
    	android:label="@string/app_name"
    	android:persistent="true">
    	
        <activity android:name="MainMenuActivity"
                  android:configChanges="keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
		<activity android:name="PackageListActivity"/>
		
		<activity android:name="AppDetailActivity"/>
        
        <activity android:name="SettingsActivity"/>
        
		<receiver android:name="GuardianReceiver">
			<intent-filter >
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

    </application>

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.INTERNET" />
    
</manifest>